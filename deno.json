{
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "exclude": [
      ".agents/skills",
      ".claude/skills",
      ".claude/worktrees",
      ".github/skills",
      ".worktrees",
      "skills"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "tasks": {
    "test:unit": "deno test -A tests/unit/**/*.ts",
    "test:integration": "deno test -A tests/integration/**/*.ts",
    "test:acceptance": "deno run -A scripts/task--test-acceptance.ts all",
    "test:acceptance:platform:macos": "deno run -A scripts/task--test-acceptance.ts platform-macos",
    "test:acceptance:platform:linux": "deno run -A scripts/task--test-acceptance.ts platform-linux",
    "test:acceptance:platform:windows": "deno run -A scripts/task--test-acceptance.ts platform-windows",
    "test:acceptance:platform": "deno run -A scripts/task--test-acceptance.ts platform",
    "test:acceptance:m1": "deno run -A scripts/task--test-acceptance.ts m1",
    "test:acceptance:rust": "deno run -A scripts/task--test-acceptance--rust.ts smoke",
    "test": "deno task test:unit && deno task test:integration",
    "typecheck": "deno check src/main.ts tests/unit/**/*.ts tests/integration/**/*.ts tests/acceptance/**/*.ts",
    "lint": "deno lint src tests",
    "lint:markdown": "deno run --allow-run --allow-read scripts/task--lint--markdown.ts",
    "fmt": "deno fmt",
    "hooks:install": "deno run --allow-read --allow-write scripts/task--hooks--install.ts",
    "hooks:pre-commit": "deno run --allow-run --allow-read scripts/task--hooks--pre-commit.ts",
    "build:macos:arm64": "deno run -A scripts/build-target.ts aarch64-apple-darwin dist/zen-backup-aarch64-apple-darwin",
    "build:macos:x64": "deno run -A scripts/build-target.ts x86_64-apple-darwin dist/zen-backup-x86_64-apple-darwin",
    "build:macos": "deno task build:macos:arm64 && deno task build:macos:x64",
    "build:linux:x64": "deno run -A scripts/build-target.ts x86_64-unknown-linux-gnu dist/zen-backup-x86_64-unknown-linux-gnu",
    "build:linux:arm64": "deno run -A scripts/build-target.ts aarch64-unknown-linux-gnu dist/zen-backup-aarch64-unknown-linux-gnu",
    "build:linux": "deno task build:linux:x64 && deno task build:linux:arm64",
    "release:macos": "deno run -A scripts/task--release-macos.ts",
    "release:linux": "deno run -A scripts/task--release-linux.ts",
    "test:smoke:macos:scheduler": "deno run -A scripts/task--test--smoke--macos--scheduler.ts",
    "test:smoke:windows:scheduler": "deno run -A scripts/task--test--smoke--windows--scheduler.ts",
    "release:windows": "deno run -A scripts/task--release-windows.ts"
  }
}
